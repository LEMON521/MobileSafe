<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/home_tv_title"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#8066ff00"
        android:gravity="center"
        android:text="功能列表"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/home_tv_notice"
        android:layout_width="fill_parent"
        android:text="好想亲爱的,萌萌嗒,一起来做爱哦~~好想亲爱的,萌萌嗒,一起来做爱哦~~好想亲爱的,萌萌嗒,一起来做爱哦~~好想亲爱的,萌萌嗒,一起来做爱哦~~好想亲爱的,萌萌嗒,一起来做爱哦~~"
       android:singleLine="true"
        android:layout_height="20dp" />

    <GridView
        android:id="@+id/home_gv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dip"
        android:numColumns="3"
        android:verticalSpacing="15dip" >
    </GridView>

</LinearLayout>