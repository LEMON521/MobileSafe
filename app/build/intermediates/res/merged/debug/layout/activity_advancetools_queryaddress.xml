<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#8066ff00"
        android:gravity="center"
        android:text="查询号码地区"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_tools_phonenumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        android:gravity="center_vertical"
        android:hint="请输入将要查询的电话号码"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_tools_queryaddress"
        android:onClick="queryAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询" />

    <TextView
        android:id="@+id/tv_tools_queryshow"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="该号码的地区为:"
        android:textColor="#000000"
        android:textSize="16sp" />


</LinearLayout>