<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_lv_black_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="姓名"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_lv_black_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_lv_black_name"
        android:layout_marginLeft="5dp"
        android:text="电话号码"
        android:textColor="#98000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_lv_black_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_lv_black_number"
        android:layout_alignBottom="@+id/tv_lv_black_number"
        android:layout_toRightOf="@+id/tv_lv_black_number"
        android:text="(归属地)"
        android:textColor="#98000000"
        android:textSize="15sp" />

    <ImageView
        android:src="@drawable/main_clean_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tv_lv_black_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拦截方式:来电+短信"
        android:textColor="#98000000"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/tv_lv_black_name"
        android:layout_alignBottom="@+id/tv_lv_black_name"
        android:layout_centerHorizontal="true" />
</RelativeLayout>