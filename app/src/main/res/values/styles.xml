<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <!--标题Text的自定义样式-->
    <style name="text_title_style" parent="AppBaseTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">#8066ff00</item>
        <item name="android:gravity">center</item>
        <item name="android:text">请设置标题</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--描述text的自定义样式-->
    <style name="text_discription_style" parent="AppBaseTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- <item name="android:background">#8066ff00</item>    -->
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">请输入将要展示的信息,图片默认关闭状态</item>
        <item name="android:textColor">#99000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableLeft">@android:drawable/star_big_off</item>
    </style>

    <!--下一步按钮的自定义样式-->
    <style name="btn_next" parent="AppBaseTheme">
        <item name="android:onClick">btn_next_onclick</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">下一步</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawableRight">@drawable/next</item>

    </style>

    <!--上一步按钮的自定义样式-->
    <style name="btn_previous" parent="AppBaseTheme">
        <item name="android:onClick">btn_previous_onclick</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">上一步</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:drawableLeft">@drawable/previous</item>

    </style>
</resources>
