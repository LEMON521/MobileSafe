<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#8066ff00"
        android:gravity="center"
        android:text="高级工具"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_tools_queryaddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        android:gravity="center_vertical"
        android:text="查询号码归属地"
        android:textColor="#000000"
        android:textSize="16sp" />
    <TextView
    android:id="@+id/tv_tools_smsbackup"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:drawableLeft="@android:drawable/ic_menu_camera"
    android:gravity="center_vertical"
    android:text="备份短信"
    android:textColor="#000000"
    android:textSize="16sp" />

    <!--自定义控件——设置提示框风格-->
    <com.ajohn.mobilesafe.view.CustomwedgitTTIView
        android:id="@+id/cwv_tti_tools_setbackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <!--自定义控件——设置提示框位置-->
    <com.ajohn.mobilesafe.view.CustomwedgitTTIView
        android:id="@+id/cwv_tti_tools_setposition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />



</LinearLayout>
